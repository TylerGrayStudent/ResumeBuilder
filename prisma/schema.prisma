generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model notes {
  text      String
  id        String  @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  completed Boolean @default(false)
}

